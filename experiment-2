#include<iostream>
using namespace std;
int main(){
    int a,b;
    cout<<"Enter 1st number: ";
    cin>>a;
    cout<<"Enter 2nd number: ";
    cin>>b;
    if(a>b){
        cout<<"1st number is greater";
    }
    else{
        cout<<"2nd number is greater";
    }

}

OUTPUT
----------
Enter 1st number: 15
Enter 2nd number: 25
2nd number is greater
